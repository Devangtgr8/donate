<h2> Hospital Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :hospital_name %><br />
  <%= f.text_field :hospital_name %></div>

  <div><%= f.label :doctor_incharge %><br />
  <%= f.text_field :doctor_incharge %></div>

  <div><%= f.label :hospital_address %><br />
  <%= f.text_field :hospital_address %></div>

  <div><%= f.label :hospital_city %><br />
  <%= f.text_field :hospital_city %></div>

  <div><%= f.label :hospital_phone %><br />
  <%= f.text_field :hospital_phone %></div>

  <div><%= f.label :hospital_zip %><br />
  <%= f.text_field :hospital_zip %></div>



  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "hospitals/shared/links" %>
