<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :age %><br />
  <%= f.number_field :age %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :mobile %><br />
  <%= f.text_field :phone %></div>

  <div><%= f.label :address %><br />
  <%= f.text_field :address %></div>

  <div><%= f.label :city %><br />
  <%= f.text_field :city %></div>

  <div><%= f.label :postal_code %><br />
  <%= f.text_field :zip %></div>

  <div><%= f.label :gender %><br />
  <%= f.select :gender, ["Male", "Female"] %></div>

  <div><%= f.label :bloodgroup %><br />
  <%= f.select :bloodgroup ,["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"] %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
