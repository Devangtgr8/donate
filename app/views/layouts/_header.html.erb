<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Donate", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
          <li><%= link_to "Home", current_user %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Hospitals", hospitals_path %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <% if user_signed_in? %>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
                </li>
              </ul>
              <% end %>
              <% if hospital_signed_in? %>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_hospital %></li>
                <li><%= link_to "Settings", edit_hospital_registration_path(current_hospital) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_hospital_session_path, method: "delete" %>
                </li>
              </ul>
              <% end %>
            </li>
          <% else %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Hospitals", hospitals_path %>
            <li><%= link_to "User sign in", new_user_session_path %></li>
            <li><%= link_to "Hospital sign in", new_hospital_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>